# Import the NumPy library
import numpy as np
# Create the list of lists
lst = [[1, 2, 3], [4, 5], [6, 7, 8]]
# Convert it to a NumPy array
a = np.array([np.array(x) for x in lst])
# Print the resulting array
print(a)
	'''
[array([1, 2, 3]) array([4, 5]) array([6, 7, 8])]
''
	'''
